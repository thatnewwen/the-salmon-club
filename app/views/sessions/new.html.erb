<div class="container">
  <h2 class="sign-up subtitle">Log In</h2>

  <% if @errors %>
    <% @errors.each do |error| %>
      <div class="error_message"><%= error %></div>
    <% end %>
  <% end %>


  <%= form_for(:session, url: login_path, class:"register-form") do |f| %>
  <p class="input-field login-field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p class="input-field login-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p class="input-field">
    <%= f.submit 'login' ,:class => 'waves-effect waves-light btn'%>
  </p>
<% end %>
</div>