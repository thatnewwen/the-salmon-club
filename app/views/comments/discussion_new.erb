<div class="new-text">
	<script src='//cdn.tinymce.com/4/tinymce.min.js'></script>
	<script>
	  tinymce.init({
	    selector: '.mytextarea',
	    plugins: "link"
	  });
	  </script>
	<h2 class="white-text subtitle">Post a comment</h2>
	<%= form_for(@comment, url: discussion_comment_create_path) do |f| %>
	  <p class="input-field">
	    <%= f.label :content  %>
	    <%= f.text_area :content, class: "mytextarea"%>
	  </p>
	  <p>
	    <%= f.submit 'submit', :class => 'waves-effect waves-light btn' %>
	  </p>
	<% end %>
</div>